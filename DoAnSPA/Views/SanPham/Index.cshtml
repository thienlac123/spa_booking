@model IEnumerable<DoAnSPA.Models.SanPham>

@{
    ViewData["Title"] = "Sản phẩm Spa & Mỹ phẩm";
    string VND(decimal x) => x.ToString("#,0") + " ₫";

    var categories      = ViewBag.Categories as List<string> ?? new List<string>();
    string currentSearch   = ViewBag.Search as string;
    string currentCategory = ViewBag.Category as string;
    string currentSort     = ViewBag.SortOrder as string ?? "name_asc";
}

<div class="container py-5">
    <div class="row mb-5 text-center">
        <div class="col-lg-8 mx-auto">
            <h2 class="fw-bold text-primary mb-3">
                <i class="fas fa-leaf me-2"></i>Bộ Sưu Tập Sản Phẩm
            </h2>
            <p class="text-muted lead">
                Chăm sóc vẻ đẹp của bạn với các dòng mỹ phẩm thiên nhiên cao cấp được tin dùng tại Spa.
            </p>
        </div>
    </div>

    @* THÔNG BÁO *@
    @if (TempData["Success"] is string sMsg)
    {
        <div class="alert alert-success shadow-sm border-0 rounded-3">
            <i class="fas fa-check-circle me-2"></i>@sMsg
        </div>
    }
    @if (TempData["Error"] is string eMsg)
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-3">
            <i class="fas fa-exclamation-circle me-2"></i>@eMsg
        </div>
    }

    @* 🔍 THANH TÌM KIẾM + LỌC LOẠI + SẮP XẾP *@
    <form asp-action="Index" method="get" class="row g-2 mb-4 align-items-end">
        <div class="col-md-4">
            <label class="form-label small text-muted">Tìm kiếm sản phẩm</label>
            <input type="text"
                   name="search"
                   value="@currentSearch"
                   class="form-control"
                   placeholder="Nhập tên hoặc công dụng..." />
        </div>

        <div class="col-md-3">
            <label class="form-label small text-muted">Loại sản phẩm</label>
            <select name="category" class="form-select">
                <option value="">Tất cả loại sản phẩm</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat" selected="@(cat == currentCategory)">
                        @cat
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label small text-muted">Sắp xếp</label>
            <select name="sortOrder" class="form-select">
                <option value="name_asc" selected="@(currentSort == "name_asc")">Tên A → Z</option>
                <option value="name_desc" selected="@(currentSort == "name_desc")">Tên Z → A</option>
                <option value="price_asc" selected="@(currentSort == "price_asc")">Giá tăng dần</option>
                <option value="price_desc" selected="@(currentSort == "price_desc")">Giá giảm dần</option>
            </select>
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary rounded-pill">
                <i class="fas fa-filter me-1"></i>Lọc
            </button>
        </div>
    </form>

    @* DANH SÁCH SẢN PHẨM *@
    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <div class="mb-3 text-muted opacity-25">
                <i class="fas fa-box-open fa-4x"></i>
            </div>
            <h4 class="text-muted">Chưa có sản phẩm nào</h4>
            <p>Vui lòng quay lại sau.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var sp in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm product-card position-relative overflow-hidden">
                        <div class="position-relative" style="height: 220px; overflow: hidden; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(sp.HinhAnhUrl))
                            {
                                <img src="@sp.HinhAnhUrl"
                                     class="card-img-top w-100 h-100"
                                     style="object-fit: cover; transition: transform 0.3s;"
                                     alt="@sp.TenSanPham" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                    <i class="fas fa-image fa-3x opacity-25"></i>
                                </div>
                            }

                            @* Badge loại sản phẩm (nếu có) *@
                            @if (!string.IsNullOrWhiteSpace(sp.LoaiSanPham))
                            {
                                <span class="position-absolute top-0 start-0 bg-white text-primary badge m-2 px-3 py-2 rounded-pill shadow-sm">
                                    @sp.LoaiSanPham
                                </span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column p-3">
                            <h5 class="card-title text-dark text-truncate fw-bold mb-2" title="@sp.TenSanPham">
                                @sp.TenSanPham
                            </h5>

                            <p class="card-text text-muted small mb-3 flex-grow-1"
                               style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @sp.MoTa
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="h5 mb-0 text-primary fw-bold">@VND(sp.Gia)</span>
                                </div>

                                <form asp-action="AddToCart" method="post" class="d-grid">
                                    <input type="hidden" name="id" value="@sp.SanPhamId" />
                                    <button type="submit" class="btn btn-outline-primary rounded-pill btn-add-cart">
                                        <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .btn-add-cart:hover {
        background-color: var(--bs-primary);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(var(--bs-primary-rgb), 0.3);
    }
</style>
