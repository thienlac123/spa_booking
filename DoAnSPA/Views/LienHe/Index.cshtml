@model DoAnSPA.Models.LienHe

@{
    ViewData["Title"] = "Liên Hệ";
}

<div class="container-fluid contact py-5" style="background: linear-gradient(135deg, #fff5f7 0%, #ffeef2 100%);">
    <div class="container pt-5">
        <div class="row g-4 align-items-center">
            <div class="col-lg-6">
                <div class="text-center">

                    <h1 class="display-3 mb-4" style="color: #d85a7f;">Liên Hệ Chúng Tôi</h1>

                    <p class="fs-4" style="color: #a8818f;">Hãy gửi tin nhắn cho chúng tôi nếu bạn có bất kỳ câu hỏi nào. Chúng tôi sẽ phản hồi trong thời gian sớm nhất.</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-form rounded p-5 bg-white" style="box-shadow: 0 10px 30px rgba(216, 90, 127, 0.1);">
                    <h1 class="display-6 mb-4 text-center" style="color: #d85a7f;">Bạn có câu hỏi nào không?</h1>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }

                    <form asp-action="Index" method="post">
                        <div class="row gx-4 gy-3">
                            <div class="col-xl-6">
                                <input asp-for="HoTen" type="text" class="form-control bg-white border py-3 px-4" placeholder="Họ và Tên" required style="border-color: rgba(216, 90, 127, 0.2) !important;"> 
                            </div>
                            <div class="col-xl-6">
                                <input asp-for="Email" type="email" class="form-control bg-white border py-3 px-4" placeholder="Email" required style="border-color: rgba(216, 90, 127, 0.2) !important;">
                            </div>
                            <div class="col-xl-6">
                                <input asp-for="SoDienThoai" type="text" class="form-control bg-white border py-3 px-4" placeholder="Số Điện Thoại" required style="border-color: rgba(216, 90, 127, 0.2) !important;">
                            </div>
                            <div class="col-xl-6">
                                <input asp-for="ChuDe" type="text" class="form-control bg-white border py-3 px-4" placeholder="Chủ Đề" style="border-color: rgba(216, 90, 127, 0.2) !important;">
                            </div>
                            <div class="col-12">
                                <textarea asp-for="NoiDung" class="form-control bg-white border py-3 px-4" rows="4" placeholder="Nội dung liên hệ" required style="border-color: rgba(216, 90, 127, 0.2) !important;"></textarea>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn w-100 py-3 px-5" type="submit" style="background: linear-gradient(to right, #ff8fab, #d85a7f); color: white; border: none; font-weight: 500;">Gửi Ngay</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

