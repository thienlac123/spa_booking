    <style>
        /* Custom CSS for Active Navbar Link */
        .navbar-nav .nav-item .nav-link {
            color: #333; /* Màu chữ mặc định */
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative; /* Cho underline */
            padding-bottom: 8px; /* Khoảng cách cho underline */
        }

            .navbar-nav .nav-item .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #d85a7f; /* Màu hồng cho underline */
                transition: width 0.3s ease;
            }

            .navbar-nav .nav-item .nav-link:hover,
            .navbar-nav .nav-item .nav-link.active {
                color: #d85a7f; /* Màu chữ hồng khi active hoặc hover */
                font-weight: 700;
            }

                .navbar-nav .nav-item .nav-link.active::after,
                .navbar-nav .nav-item .nav-link:hover::after {
                    width: 100%; /* Kéo dài underline khi active hoặc hover */
                }

        /* Custom CSS for Footer (Giữ nguyên) */
        .footer {
            background: linear-gradient(to right, #ff8fab, #d85a7f); /* Gradient hồng cho nền footer */
            color: white; /* Màu chữ mặc định trong footer là trắng */
            padding-top: 5rem;
            padding-bottom: 3rem;
        }

            .footer h4 {
                color: white; /* Tiêu đề trong footer màu trắng */
                margin-bottom: 1.5rem;
                font-weight: bold;
            }

            .footer p, .footer span {
                color: rgba(255, 255, 255, 0.8); /* Màu chữ phụ nhạt hơn một chút */
                line-height: 1.8;
                margin-bottom: 0.5rem;
            }

                .footer p i {
                    color: white; /* Icon trong các dòng text màu trắng */
                    margin-right: 0.5rem;
                }

            .footer a {
                color: rgba(255, 255, 255, 0.8); /* Màu link mặc định */
                text-decoration: none;
                display: block; /* Mỗi link trên một dòng */
                margin-bottom: 0.5rem;
                transition: color 0.3s ease-in-out;
            }

                .footer a:hover {
                    color: white; /* Link hover màu trắng sáng */
                }

                .footer a i {
                    color: white; /* Icon trong link màu trắng */
                    margin-right: 0.5rem;
                }

            .footer .social-icons a {
                display: inline-flex; /* Chuyển thành inline-flex để căn giữa và xếp ngang */
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: rgba(255, 255, 255, 0.2); /* Nền icon mờ */
                color: white;
                justify-content: center;
                align-items: center;
                margin-right: 0.75rem;
                transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
            }

                .footer .social-icons a:hover {
                    background-color: white; /* Nền icon sáng khi hover */
                    color: #d85a7f; /* Icon màu hồng khi hover */
                }

        /* Copyright section */
        .copyright {
            background-color: #a8818f; /* Màu hồng đậm hơn cho copyright */
            padding: 1rem 0;
            color: rgba(255, 255, 255, 0.9);
        }

            .copyright a {
                color: white;
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease-in-out;
            }

                .copyright a:hover {
                    color: #ffc0d9; /* Màu hồng nhạt hơn khi hover */
                }

        /* Back to top button */
        .back-to-top {
            background-color: #d85a7f; /* Màu hồng cho nút back to top */
            color: white;
            border: none;
            bottom: 30px;
            right: 30px;
            z-index: 99;
            transition: background-color 0.3s ease-in-out;
        }

            .back-to-top:hover {
                background-color: #ff8fab; /* Màu hồng nhạt hơn khi hover */
            }
    </style>
</head>

