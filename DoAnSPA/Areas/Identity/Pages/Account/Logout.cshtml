@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-5 text-center">

                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            /* TRƯỜNG HỢP 1: Người dùng truy cập link Logout nhưng chưa bấm nút (Method GET) */
                            <div class="mb-4">
                                <div class="mb-3">
                                    <i class="fas fa-sign-out-alt fa-4x text-warning"></i>
                                </div>
                                <h3 class="fw-bold mb-2">Bạn muốn đăng xuất?</h3>
                                <p class="text-muted">Nhấn nút bên dưới để thoát khỏi hệ thống an toàn.</p>
                            </div>

                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-danger btn-lg rounded-pill w-100 shadow-sm">
                                    <i class="fas fa-power-off me-2"></i> Xác nhận Đăng xuất
                                </button>
                            </form>

                            <div class="mt-3">
                                <a href="/" class="text-decoration-none text-secondary small">
                                    <i class="fas fa-arrow-left me-1"></i> Quay lại trang chủ
                                </a>
                            </div>
                        }
                        else
                        {
                            /* TRƯỜNG HỢP 2: Đã đăng xuất thành công */
                            <div class="mb-4">
                                <div class="mb-3">
                                    <i class="fas fa-check-circle fa-4x text-success"></i>
                                </div>
                                <h3 class="fw-bold text-success mb-2">Đã đăng xuất!</h3>
                                <p class="text-muted">Cảm ơn bạn đã sử dụng dịch vụ. Hẹn gặp lại!</p>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-page="/Account/Login" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập lại
                                </a>
                                <a href="/" class="btn btn-outline-secondary rounded-pill">
                                    Về trang chủ
                                </a>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>