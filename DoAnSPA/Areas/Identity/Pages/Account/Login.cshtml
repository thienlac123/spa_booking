@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-lg mt-4">
                <div class="card-header bg-primary text-white text-center py-4">
                    <div class="mb-2">
                        <i class="fas fa-user-circle fa-4x"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Chào mừng trở lại!</h3>
                </div>

                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><i class="fas fa-envelope me-1 text-muted"></i> Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password"><i class="fas fa-lock me-1 text-muted"></i> Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-secondary" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                            </button>
                        </div>

                        <hr class="my-4" />

                        <div class="text-center d-flex flex-column gap-2">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-primary small">
                                <i class="fas fa-key me-1"></i> Quên mật khẩu?
                            </a>

                            <span class="text-muted small">Chưa có tài khoản?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm rounded-pill">
                                Đăng ký ngay
                            </a>

                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-muted small mt-2">
                                Gửi lại email xác nhận
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}