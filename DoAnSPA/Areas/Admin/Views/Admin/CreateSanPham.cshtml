@model DoAnSPA.Models.SanPham
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-3">Thêm sản phẩm</h2>

<form asp-action="SanPhamCreate" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="TenSanPham" class="form-label"></label>
        <input asp-for="TenSanPham" class="form-control" />
        <span asp-validation-for="TenSanPham" class="text-danger"></span>
    </div>

    <!-- 🔥 LOẠI SẢN PHẨM (3 loại cố định) -->
    <div class="mb-3">
        <label asp-for="LoaiSanPham" class="form-label">Loại sản phẩm</label>
        <select asp-for="LoaiSanPham" class="form-select">
            <option value="">-- Chọn loại sản phẩm --</option>
            <option value="Chăm sóc da mặt">Chăm sóc da mặt</option>
            <option value="Chăm sóc body">Chăm sóc body</option>
            <option value="Sản phẩm thư giãn">Sản phẩm thư giãn</option>
        </select>
        <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" rows="3" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Gia" class="form-label"></label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh sản phẩm</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Đang bán</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="SanPham" class="btn btn-secondary">Huỷ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
