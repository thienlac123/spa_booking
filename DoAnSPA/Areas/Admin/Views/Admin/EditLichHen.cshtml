@model DoAnSPA.Models.ViewModels.LichHenEditTrangThaiViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Cập nhật trạng thái";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 mb-3 text-primary">Cập nhật trạng thái lịch hẹn</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>Lịch Hẹn #@Model.LichHenId</strong>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Khách hàng:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.TenNguoiDat</strong> <br />
                    <span class="text-muted">@Model.SoDienThoai</span>
                </dd>

                <dt class="col-sm-3">Dịch vụ:</dt>
                <dd class="col-sm-9 text-success fw-bold">@Model.TenDichVu</dd>

                <dt class="col-sm-3">Ngày giờ:</dt>
                <dd class="col-sm-9">@Model.NgayHen.ToString("dd/MM/yyyy") - @Model.GioHen</dd>

                <dt class="col-sm-3">Ghi chú:</dt>
                <dd class="col-sm-9 text-muted">@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</dd>
            </dl>

            <hr />

            <form asp-area="Admin" asp-controller="LichHen" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="LichHenId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Trạng thái xử lý:</label>
                    <select asp-for="TrangThai" class="form-select form-select-lg">
                        <option value="ChoXacNhan">⏳ Chờ xác nhận</option>
                        <option value="DaCoc">💰 Đã Cọc (Web3)</option>
                        <option value="HoanThanh">✅ Hoàn thành</option>
                        <option value="DaHuy">❌ Đã hủy</option>
                        <option value="DaPhat">🚫 Đã phạt (Khách bùng)</option>
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>