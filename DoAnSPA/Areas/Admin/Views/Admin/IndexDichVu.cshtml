@model IEnumerable<DoAnSPA.Models.DichVu>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản Lý Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Quản Lý Dịch Vụ</h2>

<a asp-controller="Admin" asp-action="ServiceCreate" class="btn btn-success mb-3">+ Thêm Dịch Vụ</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên Dịch Vụ</th>
            <th>Mô Tả</th>
            <th>Giá</th>
            <th>Hình Ảnh</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenDichVu</td>
                <td>@item.MoTa</td>
                <td>@item.Gia.ToString("N0") VNĐ</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="@item.HinhAnh" alt="Hình ảnh" width="100" height="100" />
                    }
                    else
                    {
                        <span>Không có hình</span>
                    }
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="ServiceEdit" asp-route-id="@item.DichVuId" class="btn btn-warning btn-sm">Sửa</a>

                    <form asp-controller="Admin" asp-action="ServiceDeleteConfirmed" asp-route-id="@item.DichVuId" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa dịch vụ này?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
